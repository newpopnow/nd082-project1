{
    "type": "Microsoft.Authorization/policyDefinitions",
    "name": "tagging-policy",
    "properties": {
        "mode": "indexed",
        "displayName": "Deny create resources without "tagging",
        "description": "This policy deny whether any resources don't have tag",
        "policyRule": {
            "if":{
                "allof": [
                    {
                        "field": "[concat('tags[', parameters('tagName'), ']')]",
                        "exists": "false"
                    }
                ]
            },
        }
        "then": {
            "effect": "deny"
        }
    }
}